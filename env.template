# Environment Configuration Template
# Copy this file to .env and update with your actual values

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/fusee_backend

# ===========================================
# GRID CONFIGURATION
# ===========================================
GRID_ENVIRONMENT=sandbox
GRID_API_KEY=your-grid-api-key-here
GRID_BASE_URL=https://grid.squads.xyz

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
# Number of admin signatures required to execute transactions
ADMIN_VOTING_THRESHOLD=2

# Minimum threshold (safety limit)
ADMIN_MIN_THRESHOLD=1

# Maximum threshold (safety limit)
ADMIN_MAX_THRESHOLD=10

# Time delay configuration for transaction execution
# Enable time delay before transactions can be executed (additional security)
ADMIN_TIME_DELAY_ENABLED=false

# Default delay in seconds (5 minutes = 300 seconds)
ADMIN_TIME_DELAY_SECONDS=300

# Minimum allowed delay (1 minute = 60 seconds)
ADMIN_MIN_DELAY_SECONDS=60

# Maximum allowed delay (24 hours = 86400 seconds)
ADMIN_MAX_DELAY_SECONDS=86400

# ===========================================
# ADMIN INACTIVITY CLEANUP CONFIGURATION
# ===========================================
# Enable automatic cleanup of inactive admins
ADMIN_INACTIVITY_CLEANUP_ENABLED=true

# Hours of inactivity before admin is considered inactive (48 hours default)
ADMIN_INACTIVITY_TIMEOUT_HOURS=48

# How often to check for inactive admins (60 minutes default)
ADMIN_CLEANUP_INTERVAL_MINUTES=60

# ===========================================
# REDIS CONFIGURATION (Optional)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Development: Allow localhost origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,http://localhost:8080,http://localhost:4200,http://127.0.0.1:3000,http://127.0.0.1:3001,http://127.0.0.1:5173,http://127.0.0.1:8080,http://127.0.0.1:4200

# Production: Only allow your actual domains
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com,https://admin.yourdomain.com

CORS_MAX_AGE=86400
ENABLE_CORS_LOGGING=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true
LOG_TO_FILE=false
LOG_DIRECTORY=./logs

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true

# ===========================================
# CORS CONFIGURATION EXAMPLES
# ===========================================

# Single Domain
# ALLOWED_ORIGINS=https://yourdomain.com

# Multiple Subdomains
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com,https://admin.yourdomain.com

# Multiple Environments
# ALLOWED_ORIGINS=https://staging.yourdomain.com,https://production.yourdomain.com,https://yourdomain.com

# Mobile App Support
# ALLOWED_ORIGINS=https://yourdomain.com,capacitor://localhost,ionic://localhost

# Development with Custom Ports
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,http://localhost:8080,http://localhost:4200

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# For production deployment, override these values:
# NODE_ENV=production
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# ENABLE_CORS_LOGGING=false
# LOG_LEVEL=warn
# LOG_TO_FILE=true

